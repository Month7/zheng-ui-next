{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@packages/*": ["./packages/*"],
    }
  },
  "include": [
    "packages/**/*.vue", 
    "packages",
    "docs/.vuepress/**/*.tsx",
    "docs/.vuepress/**/*.vue",
    "docs"
  ],
  "exclude": [
    "stories",
    "dist",
    "node_modules"
  ],
}